@using OnlineTicaret.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Departman</th>
        <th>Güncelle</th>
        @*<th>Satışlar</th>*@
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.Personelid
            </td>
            <td>
                @k.PersonelAd
            </td>
            <td>
                @k.PersonelSoyad
            </td>
            <td>
                @k.Departmanid
            </td>

            <td>
                <a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-success">Güncelle</a>
            </td>
            @*<td>
                <a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-success" style="background-color:pink; color:white">Detaylar</a>
            </td>*@
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>